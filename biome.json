{
  "files": {
    "ignore": [
      "_cjs",
      "_esm",
      "_types",
      ".next",
      ".vercel",
      ".svelte-kit",
      "bun.lockb",
      "tsconfig.json",
      "tsconfig.*.json",
      "tsconfig.node.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noDelete": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  }
}
